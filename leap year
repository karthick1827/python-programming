a=float(input("enter the value :"))
if(a<0):
   print("enter the valid inputs:")
else:
   if(a!=int(a)):
      print("it is invalid")
   else:
      if(a%4==0 or a%400==0 or a%100==0):
         print("it is a leap year :")
      else:
         print("it is not a leap yera ")
         b=int(a)
         while(b>0):
            b=b-1
            if(b%4==0):
               print(b)
               break;
